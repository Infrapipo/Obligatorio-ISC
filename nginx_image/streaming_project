server {
    listen 443 ssl;
    server_name clases.casapatera.com;
    ssl_certificate /etc/nginx/certs/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/nginx/certs/privkey.pem; # managed by Certbot


    location /static/ {
        alias /home/juan/streaming_platform/streaming/static/;

    }

    location /media/ {
        alias /home/juan/streaming_platform/streaming/media/;

    }
}
